  <div class="contents row" >
  <%= render 'follow_form' if user_signed_in? %>
    <section class="stats">
    <%= render 'users/stats' %>
    </section>
    <p><%= @nickname %>さんの投稿一覧</p>
    <% @tweets.each do |tweet| %>
      <%= render partial: "tweets/tweet", locals: {tweet: tweet} %>
    <% end %>
    <%= paginate(@tweets) %>
  </div>